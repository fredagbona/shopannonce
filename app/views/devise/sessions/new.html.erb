<section class="m-5 p-5" style="background-color: #31404a;">
    <h2 class="text-center text-white">Heureux de vous revoir !</h2>
    <div class="row">
      <div class="col-6">
        <img src="https://res.cloudinary.com/hgjpsweyn/image/upload/v1640644431/background/business-3d-advertising_iio4et.png">
      </div>
      <div class="col-6">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="col-auto pb-2">
              <%= f.label :email, class:"form-label m-2" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control-lg" %>
            </div>

            <div class="col-auto pb-2">
              <%= f.label :password, class:"form-label m-2" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control-lg" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="col-auto pb-2">
                <%= f.check_box :remember_me, class:"form-check-input" %>
                <%= f.label :remember_me, class:"form-check-label m-2" %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Se connecter", class:"btn btn-primary" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>
</section>
