<section class=" bg-secondary">
          <h2 class="text-center text-white">Créer votre compte et créez votre première annonce !</h2>
    <div class="row">
      <div class="col-5">
      <img src="https://res.cloudinary.com/hgjpsweyn/image/upload/v1640644430/background/business-3d-advertisement_jmzegl.png">
      </div>

      <div class="col-7">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="col-auto">
            <%= render "devise/shared/error_messages", resource: resource %> <br><br>
          </div>

            <div class="col-auto">
              <%= f.label :name, class:"form-label m-2" %><br />
              <%= f.text_field :name, class:"form-control-lg" %>
            </div>

            <div class="col-auto">
              <%= f.label :email, class:"form-label m-2" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control-lg" %>
            </div>

            <div class="col-auto">
              <%= f.label :address, class:"form-label m-2" %><br />
              <%= f.text_field :address, class:"form-control-lg" %>
            </div>

            <div class="col-auto">
              <%= f.label :phone_number, class:"form-label m-2" %><br />
              <%= f.text_field :phone_number, class:"form-control-lg" %>
            </div>

            <div class="col-auto">
              <%= f.label :password, class:"form-label m-2" %>
              <% if @minimum_password_length %>
              <em class="text-white">(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control-lg" %>
            </div>

            <div class="col-auto">
              <%= f.label :password_confirmation, class:"form-label m-2" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control-lg" %>
            </div>

            <p class="text-white"> Avatar </p>
            <div class="col-auto">
              <%= image_tag(@user.avatar.url) if @user.avatar && @user.avatar.url %>
                
                    <%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png', class:"form-control-lg" %>
                    <%= f.hidden_field :avatar_cache, class:"form-control-lg" %>
            </div><br><br>
            
            <div class="actions">
              <%= f.submit "Créer mon compte", class:"btn btn-primary mb-3 " %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %> <br>
      <div> 
    </div>
</section>
