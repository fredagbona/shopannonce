<section class="bg-secondary">

        <h2 class="text-white text-center">Vous avez oublié votre mot de passe ?</h2>
  <div class="row">
    <div class="col-4">
    </div>
    <div class="col-4">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="col-auto pb-3">
            <%= f.label :email, class:"form-label m-3" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control-lg" %>
          </div>

          <div class="actions">
            <%= f.submit "Envoyez le mail de récupération de mot de passe", class:"btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
                
    </div>
    <div class="col-4">
    </div>
  </div>
</section>
<br><br><br>



