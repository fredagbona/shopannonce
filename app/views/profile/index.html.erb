<section id="myads" class="bg-light">
  <h2 class="text-center">Mes annonces </h2>
    <% @adverts.each do |advert| %>
      <div class="row">
        <div class="col-2">
        </div>
        <div class="col-8">
          <% if advert.valide %>
            <div class="card mb-3">
            <%= image_tag(advert.image.url, class: "card-img-top w-25") if advert.image && advert.image.url  %>
              
              <div class="card-body">
                <h5 class="card-title"><%= advert.title %></h5>
                <p class="card-text"><%= advert.description %></p>
                <p class="card-text"> Prix : <%= advert.prix %> â‚¬</p>
                  <p class="card-text">Localisation : <%= advert.localisation %></p>
                  <p class="card-text text-center p-2 bg-primary"><%= advert.category %></p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
              <%= link_to 'Edit', edit_advert_path(advert), class:"btn btn-outline-primary text-center" %> 
              <%= link_to 'Delete', advert, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger " %>
             </div>
          <% end %>
        </div>
        <div class="col-2">
        </div>
      
      </div>
     
    <% end %>
