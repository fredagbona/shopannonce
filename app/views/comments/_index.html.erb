<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
     
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
    
        <p><%= comment.content %></p>
       
        <p><%= link_to "Edit comment", edit_advert_comment_path(advert, comment), remote: true %></p>
         <p><%= link_to "Delete comment", advert_comment_path(comment.advert_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "Do you want delete comment ?"} %></p>

      </li>
    <% end %>
  <% end %>
</ul>